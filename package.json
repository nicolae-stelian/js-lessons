{
  "name": "arc-adapter",
  "version": "1.0.0",
  "description": "PRISA Adapter API",
  "main": "01/handler.js",
  "scripts": {
    "lint": "xo",
    "test": "jest --coverage"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "aws-sdk": "^2.852.0",
    "axios": "^0.21.1",
    "http": "0.0.1-security",
    "dotenv": "^8.2.0",
    "lodash.get": "^4.4.2"
  },
  "devDependencies": {
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-jest": "^24.1.5",
    "husky": "^1.2.0",
    "jest": "^26.6.3",
    "serverless-functions-base-path": "^1.0.32",
    "xo": "^0.37.1"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm run test"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "./src/**/*.js"
    ],
    "coverageDirectory": "./coverage",
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    }
  },
  "xo": {
    "extends": [
      "airbnb-base",
      "plugin:jest/recommended"
    ],
    "envs": [
      "es6",
      "node"
    ],
    "ignores": [
      "__mocks__/**"
    ],
    "rules": {
      "no-console": "off",
      "linebreak-style": 0,
      "arrow-body-style": [
        "error",
        "always"
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ],
      "max-len": [
        "error",
        140
      ],
      "no-underscore-dangle": "off",
      "unicorn/filename-case": [
        "error",
        {
          "case": "kebabCase"
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "**/*.test.js"
        ],
        "rules": {
          "no-unused-vars": [
            "error"
          ]
        }
      }
    ]
  }
}
